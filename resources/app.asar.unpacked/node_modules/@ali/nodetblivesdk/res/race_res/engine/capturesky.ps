precision highp float;

uniform samplerCube PBR_Environment_Map;
varying vec3 UV;

vec3 SamplerEnvLightTex( vec4 vNorMip )
{
	vec4 rgbm = textureLod(PBR_Environment_Map, vNorMip.rgb, 0);
	return rgbm.rgb * rgbm.a * 16.0;
}

void main()
{
	vec4 vColor = vec4(1.0);
	vec4 vNorMip = vec4(0.0);
	vNorMip.xyz = UV;
	gl_FragColor.xyz = pow( SamplerEnvLightTex( vNorMip ), vec3(1.0 / 2.2));
	gl_FragColor.a = 1.0;
}