uniform float4x4 ViewProj;
uniform texture2d image;
uniform texture2d gauss;
uniform texture2d lut;

uniform texture2d target;
uniform float sharpenAlpha;

sampler_state def_sampler {
	Filter   = Linear;
	AddressU = Clamp;
	AddressV = Clamp;
};

struct VertInOut {
	float4 pos : POSITION;
	float2 uv  : TEXCOORD0;
};

struct VertOut {
	float4 pos : POSITION;
	float2 uv  : TEXCOORD0;
};

VertOut VSDefault(VertInOut vert_in)
{
	VertOut vert_out;
	vert_out.pos = mul(float4(vert_in.pos.xyz, 1.0), ViewProj);
	vert_out.uv  = vert_in.uv;
	return vert_out;
}

float4 PSDrawBare(VertOut vert_in) : TARGET
{
	float4 iColor=image.Sample(def_sampler, vert_in.uv);
	float4 skinColor = lut.Sample(def_sampler, vert_in.uv);
	float4 guassianColor  = gauss.Sample(def_sampler, vert_in.uv);
	float3 usmColor = iColor.rgb - guassianColor.rgb;
	float3 resultColor = clamp(skinColor.rgb + sharpenAlpha * usmColor, 0.0, 1.0);
	return float4(resultColor.rgb, 1.0);;
}

technique Draw
{
	pass
	{
		vertex_shader = VSDefault(vert_in);
		pixel_shader  = PSDrawBare(vert_in);
	}
}
