#ifdef GL_ES
precision highp float;
#endif
attribute vec4 aVertexCo;
attribute vec2 aTextureCo;
attribute vec4 aVertexDiffuse;

uniform mat4 WorldViewProj;
varying vec2 UV;
varying vec4 vColor;

void main()
{
	vec4 vPos = WorldViewProj * aVertexCo;
	UV = aTextureCo;
	vColor = aVertexDiffuse;
	gl_Position = vPos;
}