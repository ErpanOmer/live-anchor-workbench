#ifdef GL_ES
precision highp float;
#endif
uniform sampler2D tex0;
varying vec2 UV;
uniform bool bFlip;
uniform bool bRGBSort;
void main()
{
	vec2 texuv = UV;
	if(bFlip)
	{
		texuv.y = 1.0 - texuv.y;
	}

	vec4 color = texture2D(tex0, texuv).rgba;
	if(!bRGBSort)
	{
		color = color.bgra;
	}

	gl_FragColor = color;
}