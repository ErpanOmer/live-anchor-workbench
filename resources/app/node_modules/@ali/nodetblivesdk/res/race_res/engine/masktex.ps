#ifdef GL_ES
precision highp float;
#endif
uniform sampler2D 	tex0;
uniform float		intensity;
uniform float		invert;
varying vec2 UV;
void main()
{
    vec2 texuv = UV;
    vec4 vSrc = texture2D(tex0, texuv);
    vSrc = vSrc * vec4(intensity);
    gl_FragColor = vSrc * (1.0 - invert) + (1.0 - vSrc) * invert;
}